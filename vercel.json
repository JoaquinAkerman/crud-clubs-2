{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build",
        "outputDirectory": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "server/api.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ],
  "functions": {
    "api/**": {
      "runtime": "@vercel/node@1.10.1"
    }
  }
}
